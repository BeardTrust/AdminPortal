{
  "name": "beardtrust-front",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.1.5",
    "@angular/cdk": "^12.2.1",
    "@angular/common": "~12.1.0",
    "@angular/compiler": "~12.1.0",
    "@angular/compiler-cli": "^12.2.9",
    "@angular/core": "~12.1.0",
    "@angular/forms": "~12.1.0",
    "@angular/localize": "~12.1.0",
    "@angular/material": "^12.2.1",
    "@angular/platform-browser": "~12.1.0",
    "@angular/platform-browser-dynamic": "~12.1.0",
    "@angular/router": "~12.1.0",
    "@ng-bootstrap/ng-bootstrap": "^10.0.0",
    "bootstrap": "^5.0.2",
    "jasmine": "^3.10.0",
    "jest-cli": "^27.3.0",
    "jquery": "^3.6.0",
    "jw-angular-pagination": "^1.2.0",
    "ngx-pagination": "^5.1.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "CI=false && ng build",
    "postbuild": "rimraf build/**/*.map",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test-watch": "jest --watch",
    "eject": "ng eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!coverage/**",
      "!node_modules/**",
      "!src/index.js",
      "!src/setupTests.js",
      "!public/**",
      "!build/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.9",
    "@types/jest": "^27.0.2",
    "jenkins-mocha": "latest",
    "jest": "^27.3.0",
    "jest-preset-angular": "^10.0.1",
    "nyc": "^15.1.0"
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": "testResults",
    "reportFile": "sonar-report.xml",
    "indent": 4
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setupJest.ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.spec.json",
      "stringifyContentPathRegex": "\\.html$"
    }
  }
}
